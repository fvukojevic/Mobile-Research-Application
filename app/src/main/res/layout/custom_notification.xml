<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="#FFF"
    android:orientation="horizontal"
    >


    <ImageView
        android:id="@+id/notif_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:src="@android:drawable/ic_dialog_info" />

    <TextView
        android:id="@+id/notif_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/notif_icon"
        android:layout_centerHorizontal="true"
        android:paddingTop="8dp"
        android:singleLine="true"
        android:text="Rate us!"
        android:textSize="17sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/rtg1"
        android:layout_width="44dp"
        android:layout_height="43dp"
        android:layout_alignTop="@+id/rtg3"
        android:layout_toStartOf="@+id/rtg3"
        android:background="#FFF"
        android:src="@drawable/bad_star"
        android:text="Button" />

    <ImageButton
        android:id="@+id/rtg2"
        android:layout_width="44dp"
        android:layout_height="43dp"
        android:layout_alignTop="@+id/rtg1"
        android:layout_toEndOf="@+id/rtg3"
        android:background="#FFF"
        android:src="@drawable/ok_star"
        android:text="Button" />

    <ImageButton
        android:id="@+id/rtg3"
        android:layout_width="44dp"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:background="#FFF"
        android:src="@drawable/less_bad_star"
        android:text="Button" />

    <ImageButton
        android:id="@+id/rtg4"
        android:layout_width="44dp"
        android:layout_height="43dp"
        android:layout_alignTop="@+id/rtg1"
        android:layout_toEndOf="@+id/rtg2"
        android:background="#FFF"
        android:src="@drawable/great_star"
        android:text="Button" />

    <ImageButton
        android:id="@+id/rtg5"
        android:layout_width="44dp"
        android:layout_height="43dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/rtg1"
        android:layout_marginEnd="37dp"
        android:background="#FFF"
        android:src="@drawable/perfect_star"
        android:text="Button" />


</RelativeLayout>